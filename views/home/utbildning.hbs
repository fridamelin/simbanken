<h1>Utbildningar</h1>

{{#each pdf}}
    <div class="divDoc">
        <a href="/utbildningar/{{this.path}}" target="_blank"><img src="/test.png" class="pdfIcon"></a>
        <div class="infoDoc">
            <p>{{this.path}}</p>
            <a href="/delete/{{this.id}}">Ta bort</a>
        </div>
    </div>
{{/each}}

<div id="upload">
    <form action="/utbildning" method="post">
        <input type="file" name="pdf" id="chooseBtn">
        <input type="submit" value="Ladda upp">
    </form>
</div>